{
	"name": "calico-colors",
	"description": "Dreamscript - Basic Prompt scripting",
	"version": "0.0.1",
	"publisher": "mustafah",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mustafah/dreamscript"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:dream"
	],
	"contributes": {
		"languages": [{
			"id": "dream",
			"extensions": [
				".dream"
			]
		}],
		"viewsContainers": {
			"panel": [{
				"id": "myCustomViewContainer",
				"title": "âœ¨ Images",
				"icon": "icons/images.svg"
			}]
		},
		"views": {
			"myCustomViewContainer": [{
				"type": "webview",
				"id": "dreamscript.imagesView",
				"name": "Dreamscript"
			}]
		},
		"commands": [{
				"command": "dreamscript.translate",
				"title": "Translate"
			},
			{
				"command": "dreamscript.branch",
				"title": "Branch"
			},
			{
				"command": "dreamscript.pasteImage",
				"title": "Paste Image"
			},
			{
				"command": "dreamscript.addColor",
				"category": "Calico Colors",
				"title": "Add Color"
			},
			{
				"command": "dreamscript.clearColors",
				"category": "Calico Colors",
				"title": "Clear Colors",
				"icon": "$(clear-all)"
			}
		],
		"menus": {
			"view/title": [{
				"command": "dreamscript.clearColors",
				"group": "navigation",
				"when": "view == dreamscript.imagesView"
			}],
			"editor/title": [
				{
				  "when": "resourceLangId == dream",
				  "command": "dreamscript.translate",
				  "group": "navigation"
				},
				{
				  "when": "resourceLangId == dream",
				  "command": "dreamscript.branch",
				  "group": "navigation"
				},
				{
				  "when": "resourceLangId == dream",
				  "command": "dreamscript.pasteImage",
				  "group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.32.0",
		"typescript": "^5.3.2"
	},
	"dependencies": {
		"@langchain/openai": "^0.0.12",
		"axios": "^1.6.5",
		"clipboardy": "^4.0.0",
		"handlebars": "^4.7.8",
		"langchain": "^0.1.4"
	}
}